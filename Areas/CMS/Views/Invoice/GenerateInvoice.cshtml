    IEnumerable<InvoiceTaxationDetailsView> InvTaxs = ViewData["InvTaxs"] as IEnumerable<InvoiceTaxationDetailsView>;
    InVoiceAttachment content = ViewData["Content"] as InVoiceAttachment;
