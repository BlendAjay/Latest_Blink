    function CheckUncheckAllTo() {

        if ($("input[name='UserChkAll']").prop('checked') == true) {
            $.each($("input[name='UserId[]']"), function () {
                $(this).prop('checked', true);
            });
        }
        else {
            $.each($("input[name='UserId[]']"), function () {
                $(this).prop('checked', false);
            });
        }

    };


