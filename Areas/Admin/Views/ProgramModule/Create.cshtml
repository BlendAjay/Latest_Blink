@model AJSolutions.Models.ModuleMaster

@{
    ViewBag.Title = "Create";
}
<div class="container">
    <div id="contact-form-overlay" class="clearfix">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <br />
            <div class="row">
                <div class="fancy-title title-bottom-border">
                    <h3>Create New Module</h3>
                </div>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="col_half">
                    <div class="input-group divcenter">
                        @*@Html.LabelFor(model => model.ProgrammeId, htmlAttributes: new { @class = "input-group-addon" })*@
                        <span class="input-group-addon"><i class="icon-email2"> </i></span>
                        @Html.EditorFor(model => model.ModuleId, new { htmlAttributes = new { @class = "form-control", placeholder = "Module Id" } })
                        @Html.ValidationMessageFor(model => model.ModuleId, "", new { @class = "text-danger" })
                    </div><br />
                </div>

                <div class="col_half col_last">
                    <div class="input-group divcenter">
                        @*@Html.LabelFor(model => model.ProgrammeName, htmlAttributes: new { @class = "input-group-addon" })*@
                        <span class="input-group-addon"><i class="icon-email2"> </i></span>
                        @Html.EditorFor(model => model.Module, new { htmlAttributes = new { @class = "form-control", placeholder = "Module Name" } })
                        @Html.ValidationMessageFor(model => model.Module, "", new { @class = "text-danger" })

                    </div><br />
                </div>
                <div class="col_full">
                    <input type="submit" value="Create" class="button button-3d button-rounded button-teal" style="float: right;" />
                </div>
            </div>
        }

        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>
    </div>
</div>