@model AJSolutions.Models.ModuleMaster

@{
    ViewBag.Title = "Edit";
}
<div class="container">
    <div id="contact-form-overlay" class="clearfix">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="row">
                <div class="fancy-title title-bottom-border">
                    <h3>Edit Module</h3>
                </div>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.ModuleId)
                <div class="col_half">
                    <div class="input-group divcenter">
                        @*@Html.LabelFor(model => model.AccessLevel, htmlAttributes: new { @class = "control-label col-md-2" })*@
                        <span class="input-group-addon"><i class="icon-email2"> </i></span>
                        @Html.EditorFor(model => model.Module, new { htmlAttributes = new { @class = "form-control", placeholder = "Access Level" } })
                        @Html.ValidationMessageFor(model => model.Module, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col_half col_last">
                    <input type="submit" value="Save" class="button button-3d button-rounded button-teal" style="float: right;" />
                </div>
            </div>
        }
        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>
    </div>
</div>

