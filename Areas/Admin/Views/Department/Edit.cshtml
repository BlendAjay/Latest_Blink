@model AJSolutions.Models.DepartmentMaster

@{
    ViewBag.Title = "Edit";
}
<div class="container">
    <div id="contact-form-overlay" class="clearfix">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="row">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.DepartmentId)
                <div class="fancy-title title-bottom-border">
                    <h3>Edit Department</h3>
                </div>
                <div class="col_half">
                    <div class="input-group divcenter">
                        <span class="input-group-addon"><i class="icon-email2"> </i></span>
                        @Html.EditorFor(model => model.Department, new { htmlAttributes = new { @class = "form-control", PlaceHolder = "Department" } })
                        @Html.ValidationMessageFor(model => model.Department, "", new { @class = "text-danger" })
                    </div>
                    <br />
                    <div class="input-group divcenter">
                        <span class="input-group-addon"><i class="icon-email2"> </i></span>
                        @Html.EditorFor(model => model.RoleId, new { htmlAttributes = new { @class = "form-control", PlaceHolder = "Role Id" } })
                        @Html.ValidationMessageFor(model => model.RoleId, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col_half col_last">
                    <div>
                        <label for="IsVisible">
                            @Html.EditorFor(model => model.IsVisible)&nbsp;&nbsp;Isvisible
                        </label>
                        @Html.ValidationMessageFor(model => model.IsVisible, "", new { @class = "text-danger" })
                    </div><br />
                    <input type="submit" value="Save" class="button button-3d button-rounded button-teal" style="float: right;" />
                </div>
            </div>
        }
        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>
    </div>
</div>