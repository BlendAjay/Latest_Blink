@model AJSolutions.Models.DepartmentMaster

@{
    ViewBag.Title = "Create";
}
<div class="container">
    <div id="contact-form-overlay" class="clearfix">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="row">
                <div class="fancy-title title-bottom-border">
                    <h3>Create New Department</h3>
                </div>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="col_half">
                    <div class="input-group divcenter">
                        <span class="input-group-addon"><i class="icon-email2"> </i></span>
                        @Html.EditorFor(model => model.DepartmentId, new { htmlAttributes = new { @class = "form-control", Placeholder = "Department Id" } })
                        @Html.ValidationMessageFor(model => model.DepartmentId, "", new { @class = "text-danger" })
                    </div><br />
                    <div class="input-group divcenter">
                        <span class="input-group-addon"><i class="icon-email2"> </i></span>
                        @Html.EditorFor(model => model.Department, new { htmlAttributes = new { @class = "form-control", Placeholder = "Department Name" } })
                        @Html.ValidationMessageFor(model => model.Department, "", new { @class = "text-danger" })
                    </div><br />
                </div>
                <div class="col_half col_last">
                    <div class="input-group divcenter">
                        @*@Html.LabelFor(model => model.RoleId, htmlAttributes: new { @class = "control-label col-md-2" })*@
                        <span class="input-group-addon"><i class="icon-email2"> </i></span>
                        @Html.DropDownList("RoleId", null,  "---  Select Role Id ---", htmlAttributes: new { @class = "form-control", @id = "RoleId", placeholder = "Role List" })
                    </div><br />
                    <div>
                        <label for="IsVisible">
                            @Html.EditorFor(model => model.IsVisible)&nbsp;&nbsp;Is visible?
                        </label>
                        @Html.ValidationMessageFor(model => model.IsVisible, "", new { @class = "text-danger" })
                    </div><br />
                </div>
                <div class="col_full">
                    <input type="submit" value="Create" class="button button-3d button-rounded button-teal" style="float: right;" />
                </div>
            </div>
        }
        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>
    </div>
</div>