@model IEnumerable<AJSolutions.Models.DepartmentMaster>

@{
    ViewBag.Title = "Index";
}
<div class="container">
    <div class="row">
        <button class="button button-3d button-rounded button-teal" style="float:right;">
            <i class="icon-repeat"></i>
            @Html.ActionLink("Create New", "Create")
        </button>
        <br />
        <div class="fancy-title title-bottom-border">
            <h3>All Departments</h3>
        </div>
    </div>
    <div class="table-responsive">
        <table class="table table-bordered nobottommargin">
            <tr>
                <th>Department Id</th>
                <th>
                    @Html.DisplayNameFor(model => model.Department)
                </th>
                <th>@Html.DisplayNameFor(model => model.RoleId)</th>
                <th>Is Visible</th>
                <th></th>
                <th></th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.DepartmentId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Department)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RoleId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsVisible)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.DepartmentId, roleId = item.RoleId })

                    </td>
                    <td>

                        @Html.ActionLink("Details", "Details", new { id = item.DepartmentId })

                    </td>
                    <td>

                        @Html.ActionLink("Delete", "Delete", new { id = item.DepartmentId })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>
