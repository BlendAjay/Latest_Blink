@model AJSolutions.Models.InstallmentMaster

@{
    ViewBag.Title = "Edit";
}

<div class="container">
    <div id="contact-form-overlay" class="clearfix">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="row">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.InstallmentId)
                <div class="fancy-title title-bottom-border">
                    <h3>Edit Installment</h3>
                </div>
                <div class="col_half">
                    <div class="input-group divcenter">
                        <span class="input-group-addon"><i class="icon-email2"> </i></span>
                        @Html.EditorFor(model => model.Installment, new { htmlAttributes = new { @class = "form-control", PlaceHolder = "Installment" } })
                        @Html.ValidationMessageFor(model => model.Installment, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col_half col_last">
                    <input type="submit" value="Save" class="button button-3d button-rounded button-teal" style="float: right;" />
                </div>
            </div>
        }
        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>
    </div>
</div>