<script type="text/javascript">

    function SendValue() {
        var client = $("#CorporateId").find(":selected").val();
        var url = "Mycourses?ClientId=" + client;
        window.location.href = url;
    }

    function pagehelp() {
        $('#Popup').modal('show');
        $("#Popup").modal({
            backdrop: 'static',
            keyboard: false,
        })
    };
</script>
